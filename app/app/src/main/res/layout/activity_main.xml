<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <Button
        android:id="@+id/btnTakePicture"
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginEnd="43dp"
        android:layout_marginRight="43dp"
        android:layout_marginBottom="60dp"
        android:text="Take a Photo"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/capturedImage"
        android:layout_width="402dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnTakePicture"
        android:layout_alignStart="@+id/btnTakePicture"
        android:layout_alignLeft="@+id/btnTakePicture"
        android:layout_alignEnd="@+id/btnTakePicture"
        android:layout_alignRight="@+id/btnTakePicture"
        android:layout_marginStart="-43dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="-41dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="-108dp" />
</RelativeLayout>